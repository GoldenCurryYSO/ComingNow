<UserControl x:Class="ComingNow.TootPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComingNow"
             mc:Ignorable="d" 
             d:DesignWidth="300"
             RenderOptions.BitmapScalingMode="Fant">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>
    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Name="Avatar" Grid.Column="0" Width="40" Height="40" Margin="10">

            </Image>
            <StackPanel Grid.Column="1" Margin="0,5,0,5">
                <TextBlock>
                    <Run Name="Entity_display_name"/>
                    <Run Name="Entity_username" Foreground="Gray"/>
                </TextBlock>
                <TextBlock Name="Entity_content" TextWrapping="Wrap">
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
